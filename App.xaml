<Application x:Class="SimplePOS.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <!-- Design System tokens -->
        <Color x:Key="PrimaryColor">#2563eb</Color>
        <Color x:Key="SecondaryColor">#3b82f6</Color>
        <Color x:Key="BackgroundColor">#f8fafc</Color>
        <Color x:Key="SurfaceColor">#ffffff</Color>
        <Color x:Key="TextColor">#1e293b</Color>
        
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>

        <!-- Custom Button Style for POS -->
        <Style x:Key="PosButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,20"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="5"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Style.Resources>
        </Style>

        <!-- Product Button Style -->
        <Style x:Key="ProductButtonStyle" TargetType="Button" BasedOn="{StaticResource PosButtonStyle}">
            <Setter Property="Height" Value="100"/>
            <Setter Property="Width" Value="160"/>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PosButtonStyle}">
            <Setter Property="Background" Value="#e2e8f0"/>
            <Setter Property="Foreground" Value="#475569"/>
        </Style>
    </Application.Resources>
</Application>
