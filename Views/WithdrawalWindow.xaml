<Window x:Class="SimplePOS.Views.WithdrawalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Retiro de Caja" Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#f8fafc"
        FontFamily="Segoe UI">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Monto a Retirar" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" Foreground="#1e293b"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Monto ($)" FontSize="14" Foreground="#64748b" Margin="0,0,0,5"/>
            <TextBox x:Name="AmountInput" FontSize="32" Padding="10" 
                     Text="0"
                     InputScope="Number"/>
        </StackPanel>

        <Button Grid.Row="2" Content="PROCESAR RETIRO" 
                Click="Withdraw_Click"
                Height="60" FontSize="18" FontWeight="Bold"
                Background="#ef4444" Foreground="White"
                BorderThickness="0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
