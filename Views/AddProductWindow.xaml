<Window x:Class="SimplePOS.Views.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Nuevo Producto" Height="400" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#f8fafc"
        FontFamily="Segoe UI">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Nuevo Producto" FontSize="22" FontWeight="Bold" Margin="0,0,0,20" Foreground="#1e293b"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Nombre del Producto" FontSize="14" Foreground="#64748b" Margin="0,0,0,5"/>
            <TextBox x:Name="NameInput" FontSize="18" Padding="10" Margin="0,0,0,15"/>

            <TextBlock Text="Precio ($)" FontSize="14" Foreground="#64748b" Margin="0,0,0,5"/>
            <TextBox x:Name="PriceInput" FontSize="18" Padding="10" Margin="0,0,0,15" InputScope="Number"/>
            
            <TextBlock Text="Color (Opcional)" FontSize="14" Foreground="#64748b" Margin="0,0,0,5"/>
            <ComboBox x:Name="ColorPicker" SelectedIndex="0">
                <ComboBoxItem Content="Azul" Tag="#93c5fd"/>
                <ComboBoxItem Content="Verde" Tag="#6ee7b7"/>
                <ComboBoxItem Content="Naranja" Tag="#fdba74"/>
                <ComboBoxItem Content="Rosa" Tag="#fda4af"/>
                <ComboBoxItem Content="Lila" Tag="#c4b5fd"/>
            </ComboBox>
        </StackPanel>

        <Button Grid.Row="2" Content="GUARDAR PRODUCTO" 
                Click="Save_Click"
                Height="60" FontSize="18" FontWeight="Bold"
                Background="#2563eb" Foreground="White"
                BorderThickness="0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
