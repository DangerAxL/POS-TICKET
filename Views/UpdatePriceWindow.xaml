<Window x:Class="SimplePOS.Views.UpdatePriceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Actualizar Precios" Height="500" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#f8fafc"
        FontFamily="Segoe UI">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Seleccionar Producto" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" Foreground="#1e293b"/>

        <ListBox x:Name="ProductList" Grid.Row="1" 
                 ItemsSource="{Binding AvailableProducts}"
                 DisplayMemberBinding="{Binding Name}"
                 FontSize="16" Margin="0,0,0,15"
                 BorderBrush="#e2e8f0" BorderThickness="1">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="10"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="Nuevo Precio ($)" FontSize="14" Foreground="#64748b" Margin="0,0,0,5"/>
            <TextBox x:Name="PriceInput" FontSize="24" Padding="10" 
                     Text="{Binding SelectedItem.Price, ElementName=ProductList, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:F0}}"
                     InputScope="Number"/>
        </StackPanel>

        <Button Grid.Row="3" Content="GUARDAR Y CERRAR" 
                Click="Save_Click"
                Height="60" FontSize="18" FontWeight="Bold"
                Background="#2563eb" Foreground="White"
                BorderThickness="0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
