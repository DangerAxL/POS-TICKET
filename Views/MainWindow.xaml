<Window x:Class="SimplePOS.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Punto de Venta - Caja 1" Height="720" Width="1280"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI, Roboto, Helvetica">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Content -->
            <RowDefinition Height="Auto"/> <!-- Footer -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>      <!-- Products -->
            <ColumnDefinition Width="400"/>    <!-- Cart -->
        </Grid.ColumnDefinitions>

        <!-- HEADER: Caja nro 1 -->
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                Background="{StaticResource SurfaceBrush}" 
                CornerRadius="12" Padding="15" Margin="0,0,0,20"
                Effect="{DynamicResource DropShadowEffect}">
            <StackPanel Orientation="Horizontal">
                <Border Background="#dcfce7" CornerRadius="6" Padding="8,4" Margin="0,0,15,0">
                    <TextBlock Text="EN LINEA" Foreground="#166534" FontWeight="Bold" FontSize="12"/>
                </Border>
                <TextBlock Text="{Binding CajaName}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
            </StackPanel>
        </Border>

        <!-- LEFT AREA: Products and Actions -->
        <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Product Grid (Dynamic) -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding AvailableProducts}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Name}" 
                                    Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource ProductButtonStyle}"
                                    Margin="5">
                                <Button.InputBindings>
                                    <MouseBinding MouseAction="LeftDoubleClick" 
                                                  Command="{Binding DataContext.AddBulkToCartCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                  CommandParameter="{Binding}"/>
                                </Button.InputBindings>
                                <Button.Background>
                                    <SolidColorBrush Color="{Binding Color}"/>
                                </Button.Background>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Sidebar Actions (Bottom Left) -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,20,0,0">
                <Button Content="Actualizar Precios" Command="{Binding UpdatePricesCommand}" Style="{StaticResource SecondaryButtonStyle}" Width="160" Height="60"/>
                <Button Content="Nuevo Producto" Command="{Binding CreateProductCommand}" Style="{StaticResource SecondaryButtonStyle}" Width="160" Height="60" Margin="10,0,0,0"/>
                <Button Content="Cerrar Caja" Command="{Binding CerrarCajaCommand}" Style="{StaticResource SecondaryButtonStyle}" Background="#fee2e2" Foreground="#991b1b" Width="160" Height="60" Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- RIGHT AREA: Cart and Totals -->
        <Border Grid.Row="1" Grid.Column="1" 
                Background="{StaticResource SurfaceBrush}" 
                CornerRadius="12" Padding="0"
                BorderBrush="#e2e8f0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Title -->
                    <RowDefinition Height="*"/>    <!-- List -->
                    <RowDefinition Height="Auto"/> <!-- Total section -->
                </Grid.RowDefinitions>

                <Border Background="#f1f5f9" Padding="15" CornerRadius="12,12,0,0">
                    <TextBlock Text="PRODUCTOS EN TICKETS" FontWeight="Bold" Foreground="#64748b"/>
                </Border>

                <ListView Grid.Row="1" BorderThickness="0" Background="Transparent" Margin="5"
                          ItemsSource="{Binding Cart}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="PRODUCTO" Width="160" DisplayMemberBinding="{Binding ProductName}"/>
                            <GridViewColumn Header="CANT" Width="40" DisplayMemberBinding="{Binding Quantity}"/>
                            <GridViewColumn Header="TOTAL" Width="90" DisplayMemberBinding="{Binding Subtotal, StringFormat={}{0:C0}}"/>
                            <GridViewColumn Header="BORRAR" Width="60">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="X" 
                                                Command="{Binding DataContext.RemoveFromCartCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Background="#fee2e2" Foreground="#991b1b" 
                                                BorderThickness="0" FontWeight="Bold" Width="40" Height="25">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="4"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>

                <Border Grid.Row="2" Background="#f8fafc" Padding="20" CornerRadius="0,0,12,12" BorderBrush="#e2e8f0" BorderThickness="0,1,0,0">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <TextBlock Text="Total a Pagar" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding CurrentTotal, StringFormat={}{0:C0}}" FontSize="32" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Right"/>
                        </Grid>
                        <Button Content="CONFIRMAR VENTA" 
                                Command="{Binding ConfirmSaleCommand}"
                                Height="70" FontSize="20" FontWeight="Bold" Style="{StaticResource PosButtonStyle}" Margin="0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- FOOTER: Global Stats -->
        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                Background="{StaticResource SurfaceBrush}" 
                CornerRadius="12" Padding="15" Margin="0,20,0,0"
                BorderBrush="#e2e8f0" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Content="TICKETS EMITIDOS" Style="{StaticResource SecondaryButtonStyle}" Height="50" Padding="20,0"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="TOTAL DE VENTAS: " FontSize="18" VerticalAlignment="Center" Foreground="#64748b"/>
                    <TextBlock Text="{Binding TotalSales, StringFormat={}{0:C0}}" FontSize="22" FontWeight="Bold" VerticalAlignment="Center" Foreground="{StaticResource TextBrush}"/>
                </StackPanel>

                <Button Grid.Column="2" Content="COMP RETIROS DE CAJA" 
                        Command="{Binding ProcessWithdrawalCommand}"
                        Style="{StaticResource SecondaryButtonStyle}" Height="50" Padding="20,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
